{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"lib": ["es5", "es6", "dom", "es2015.promise", "es7"],
		"moduleResolution": "node",
		"declaration": true,
		"noEmitOnError": true,
		"noImplicitThis": true,
		"noImplicitAny": false,
		"removeComments": false,
		"preserveConstEnums": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": false,
		"pretty": true,
		"sourceMap": true,
		"baseUrl": "./",
		"typeRoots": [
			"../../node_modules/@types",
			"../node_modules/@types"
		],
		"types": [
		],
		"jsx": "react",
		"outDir": "../dist",
		"rootDir": "./"
	},
	"exclude": ["./client", "node_module", "./dist", "global.d.ts"]
}
